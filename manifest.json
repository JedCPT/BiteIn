{
  "name": "BiteIn",
  "description": "Learn a language seamlessly by partly translating the content of webpages",
  "version": "0.2",
  "permissions": [
      "activeTab"
    ],
  "background": {
      "scripts": ["content.js", "main.js", "jquery-3.1.1.js"],
      "persistent": false
    },
  "browser_action": {
      "default_title": "BiteIn Translate"
    },
  "manifest_version": 2,
  "icons": { "16": "icon.png",
           "48": "icon.png",
          "128": "icon.png" ,
          "128": "icon.png" },
  "web_accessible_resources": [
    "words.json"
    ]
}

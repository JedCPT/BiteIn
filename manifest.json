{
  "name": "BiteIn",
  "description": "Learn a language seamlessly by partly translating the content of webpages",
  "version": "0.2",
  "permissions": [
      "activeTab"
    ],
  "background": {
      "scripts": ["content.js", "main.js"],
      "persistent": false
    },
  "browser_action": {
      "default_title": "BiteIn Translate"
    },
  "manifest_version": 2,
  "icons": { "16": "graphics/icon.png",
           "48": "graphics/icon.png",
          "128": "graphics/icon.png" ,
          "128": "graphics/icon.png" },
  "web_accessible_resources": ["translations/nl.json", "translations/fr.json", "translations/de.json"]
}

{
  "name": "BiteIn",
  "description": "Learn a language seamlessly by parly translating the content of webpages",
  "version": "0.2",
  "permissions": [
      "activeTab"
    ],
  "background": {
      "scripts": ["content.js", "getPagesSource.js", "jquery-3.1.1.min.js"],
      "persistent": false
    },
  "browser_action": {
      "default_title": "Zing Translator"
    },
  "manifest_version": 2,
  "icons": { "16": "icon.png",
           "48": "icon.png",
          "128": "icon.png" }
}
